<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/player_app_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_height="200dp"
            android:layout_width="match_parent"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|snap">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/player_background"
                android:importantForAccessibility="no"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                tools:src="@tools:sample/backgrounds/scenic"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/player_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?android:attr/actionBarSize"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:layout_scrollFlags="enterAlways|noScroll|snap"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/player_title_layout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="8dp"
            app:layout_scrollFlags="enterAlways|noScroll|snap">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/player_title"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toTopOf="@+id/player_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/player_date"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/player_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/player_artwork"
        android:elevation="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="96dp"
        android:layout_width="96dp"
        app:layout_anchor="@+id/player_title_layout"
        app:layout_anchorGravity="center_horizontal|top"
        app:layout_scrollFlags="noScroll"/>

    <androidx.core.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/player_backward_30"
                android:background="?android:selectableItemBackground"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="48dp"
                android:src="@drawable/ic_backward_30"
                app:layout_constraintBottom_toBottomOf="@+id/player_play_pause"
                app:layout_constraintEnd_toStartOf="@+id/player_previous"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/player_play_pause"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/player_previous"
                android:background="?android:selectableItemBackground"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="48dp"
                android:src="@drawable/ic_previous"
                app:layout_constraintBottom_toBottomOf="@+id/player_play_pause"
                app:layout_constraintEnd_toStartOf="@+id/player_play_pause"
                app:layout_constraintStart_toEndOf="@+id/player_backward_30"
                app:layout_constraintTop_toTopOf="@+id/player_play_pause"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/player_play_pause"
                android:background="?android:selectableItemBackground"
                android:layout_height="64dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="64dp"
                android:src="@drawable/ic_play"
                app:layout_constraintBottom_toTopOf="@+id/player_progress"
                app:layout_constraintEnd_toStartOf="@+id/player_next"
                app:layout_constraintStart_toEndOf="@+id/player_previous"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/player_next"
                android:background="?android:selectableItemBackground"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="48dp"
                android:src="@drawable/ic_next"
                app:layout_constraintBottom_toBottomOf="@+id/player_play_pause"
                app:layout_constraintEnd_toStartOf="@+id/player_forward_30"
                app:layout_constraintStart_toEndOf="@+id/player_play_pause"
                app:layout_constraintTop_toTopOf="@+id/player_play_pause"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/player_forward_30"
                android:background="?android:selectableItemBackground"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="48dp"
                android:src="@drawable/ic_forward_30"
                app:layout_constraintBottom_toBottomOf="@+id/player_play_pause"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/player_next"
                app:layout_constraintTop_toTopOf="@+id/player_play_pause"/>

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/player_progress"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/player_played_time"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/player_progress"
                app:layout_constraintTop_toBottomOf="@+id/player_progress"
                tools:text="0:00"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/player_sermon_duration"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/player_progress"
                app:layout_constraintTop_toBottomOf="@+id/player_progress"
                tools:text="1:00:00"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
