<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.oliver.branhamplayer.android.files">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application android:name=".App">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter android:order="1">
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />

                <data
                    android:host="oliver.tech"
                    android:pathPattern="/branham-player"
                    android:scheme="https" />

                <data
                    android:host="oliver.tech"
                    android:pathPattern="/branham-player/android"
                    android:scheme="https" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.car.application"
            android:resource="@xml/automotive_app_desc" />

        <service
            android:name="tech.oliver.branhamplayer.android.files.services.MusicService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService" />
            </intent-filter>
        </service>
    </application>
</manifest>
